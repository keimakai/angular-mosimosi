@import url("http://fonts.googleapis.com/css?family=Roboto\+Slab:400,700|Roboto:400,700,700italic,400italic")

html
  font-family 'NotoSansCJKjp-Light', serif

[layout=row]
  flex-direction row

body
  overflow hidden

.back
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  overflow hidden
  background-color #FFFFFF

.logo
  position absolute
  top 0
  right 0
  bottom 0
  img
    margin 20px 30px

.left
  position absolute
  top 0
  left 0
  bottom 0
  width 320px
  background-color #FFFFFF
  box-shadow 0 0 8px rgba(0,0,0,.18)
  z-index 100

.right
  position absolute
  top 0
  left 320px
  bottom 0
  right 0
  background-color #FFFFFF

  .right-back
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    background-color #F0FDFF

.tasks
  z-index 100
  position absolute


.task
  padding 16px
  margin 0px
  background-color #FFF
  position absolute
  box-shadow 0 1px 2px rgba(0,0,0,.18)
  p
    line-height normal
    width 100%
  input
    outline none
    border 0

address
  position absolute
  right 0
  bottom 0
  margin 20px 20px
  color rgba(0,0,0,0.4)
  font-style  normal
